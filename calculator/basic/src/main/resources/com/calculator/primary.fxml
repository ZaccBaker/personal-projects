<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.calculator.PrimaryController">
   <VBox>
      <Label fx:id="calculation_output" text=""/>
      <Label fx:id="total_output" text="0"/>
   </VBox>
   <GridPane VBox.vgrow="ALWAYS" alignment="CENTER" hgap="4" vgap="4">
         <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS" percentWidth="25"/>
            <ColumnConstraints hgrow="ALWAYS" percentWidth="25"/>
            <ColumnConstraints hgrow="ALWAYS" percentWidth="25"/>
            <ColumnConstraints hgrow="ALWAYS" percentWidth="25"/>
         </columnConstraints>
         <rowConstraints>
            <RowConstraints vgrow="ALWAYS" fillHeight="true"/>
            <RowConstraints vgrow="ALWAYS" fillHeight="true"/>
            <RowConstraints vgrow="ALWAYS" fillHeight="true"/>
            <RowConstraints vgrow="ALWAYS" fillHeight="true"/>
            <RowConstraints vgrow="ALWAYS" fillHeight="true"/>
            <RowConstraints vgrow="ALWAYS" fillHeight="true"/>
         </rowConstraints>

         <Button fx:id="zero" text="0" GridPane.rowIndex="4" GridPane.columnIndex="1" onAction="#onDigit"/>
         <Button fx:id="one" text="1" GridPane.rowIndex="3" GridPane.columnIndex="0" onAction="#onDigit"/>
         <Button fx:id="two" text="2" GridPane.rowIndex="3" GridPane.columnIndex="1" onAction="#onDigit"/>
         <Button fx:id="three" text="3" GridPane.rowIndex="3" GridPane.columnIndex="2" onAction="#onDigit"/>
         <Button fx:id="four" text="4" GridPane.rowIndex="2" GridPane.columnIndex="0" onAction="#onDigit"/>
         <Button fx:id="five" text="5" GridPane.rowIndex="2" GridPane.columnIndex="1" onAction="#onDigit"/>
         <Button fx:id="six" text="6" GridPane.rowIndex="2" GridPane.columnIndex="2" onAction="#onDigit"/>
         <Button fx:id="seven" text="7" GridPane.rowIndex="1" GridPane.columnIndex="0" onAction="#onDigit"/>
         <Button fx:id="eight" text="8" GridPane.rowIndex="1" GridPane.columnIndex="1" onAction="#onDigit"/>
         <Button fx:id="nine" text="9" GridPane.rowIndex="1" GridPane.columnIndex="2" onAction="#onDigit"/>

         <Button fx:id="decimal" text="." GridPane.rowIndex="4" GridPane.columnIndex="2" onAction="#onDigit"/>

         <Button fx:id="plus" text="+" GridPane.rowIndex="1" GridPane.columnIndex="3" onAction="#onOperator"/>
         <Button fx:id="minus" text="-" GridPane.rowIndex="2" GridPane.columnIndex="3" onAction="#onOperator"/>
         <Button fx:id="multiply" text="*" GridPane.rowIndex="3" GridPane.columnIndex="3" onAction="#onOperator"/>
         <Button fx:id="divide" text="/" GridPane.rowIndex="4" GridPane.columnIndex="3" onAction="#onOperator"/>

         <Button fx:id="clear" text="C" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2" onAction="#onClear"/>
         <Button fx:id="backspace" text="&lt;-" GridPane.rowIndex="0" GridPane.columnIndex="2" GridPane.columnSpan="2" onAction="#onBackspace"/>
         <Button fx:id="equals" text="=" GridPane.rowIndex="5" GridPane.columnIndex="0" GridPane.columnSpan="4" onAction="#onEquals"/>
   </GridPane>
</VBox>
